        </HBox>
        
        <!-- Transactions Nav Item -->
        <HBox fx:id="transactionsNavItem" spacing="14" alignment="CENTER_LEFT" styleClass="nav-item"
              style="-fx-background-radius: 10; -fx-cursor: hand;">
            <padding>
                <Insets top="14" right="16" bottom="14" left="16"/>
            </padding>
            <Label text="â‡„" style="-fx-font-size: 18px; -fx-text-fill: #a855f7;"/>
            <Label text="Transactions" style="-fx-text-fill: #94a3b8; -fx-font-size: 15px;"/>
        </HBox>
        
        <!-- Reports Nav Item -->
        <HBox fx:id="reportsNavItem" spacing="14" alignment="CENTER_LEFT" styleClass="nav-item"
              style="-fx-background-radius: 10; -fx-cursor: hand;">
            <padding>
                <Insets top="14" right="16" bottom="14" left="16"/>
            </padding>
            <Label text="ðŸ“ˆ" style="-fx-font-size: 18px; -fx-text-fill: #10b981;"/>
            <Label text="Reports" style="-fx-text-fill: #94a3b8; -fx-font-size: 15px;"/>
        </HBox>
        
        <!-- Goals Nav Item -->
        <HBox fx:id="goalsNavItem" spacing="14" alignment="CENTER_LEFT" styleClass="nav-item"
              style="-fx-background-radius: 10; -fx-cursor: hand;">
            <padding>
                <Insets top="14" right="16" bottom="14" left="16"/>
            </padding>
            <Label text="ðŸš©" style="-fx-font-size: 18px; -fx-text-fill: #ef4444;"/>
            <Label text="Goals" style="-fx-text-fill: #94a3b8; -fx-font-size: 15px;"/>
        </HBox>
        
        <!-- Accounts Nav Item -->
        <HBox fx:id="accountsNavItem" spacing="14" alignment="CENTER_LEFT" styleClass="nav-item"
              style="-fx-background-radius: 10; -fx-cursor: hand;">
            <padding>
                <Insets top="14" right="16" bottom="14" left="16"/>
            </padding>
            <Label text="ðŸ‘›" style="-fx-font-size: 18px; -fx-text-fill: #f59e0b;"/>
            <Label text="Accounts" style="-fx-text-fill: #94a3b8; -fx-font-size: 15px;"/>
        </HBox>
    </VBox>
    
    <!-- Profile Section -->
    <VBox spacing="8" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 12;">
        <VBox.margin>
            <Insets top="0" right="12" bottom="0" left="12"/>
        </VBox.margin>
        <padding>
            <Insets top="16" right="16" bottom="16" left="16"/>
        </padding>
        
        <Label text="Select Wallet" 
               style="-fx-text-fill: #94a3b8; -fx-font-size: 12px; -fx-font-weight: 600;"/>
        
        <ComboBox fx:id="walletSelector"
                  style="-fx-background-color: rgba(0,0,0,0.3); -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8px; -fx-border-color: #3b82f6; -fx-border-width: 1; -fx-border-radius: 6; -fx-background-radius: 6;">
            <tooltip>
                <Tooltip text="Select which wallet to use for transactions"/>
            </tooltip>
        </ComboBox>
        
        <HBox spacing="4" alignment="CENTER_LEFT">
            <Label text="Balance:" style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;"/>
            <Label fx:id="walletBalanceLabel" text="0.00" 
                   style="-fx-text-fill: #22c55e; -fx-font-size: 13px; -fx-font-weight: 600;"/>
        </HBox>
    </VBox>
