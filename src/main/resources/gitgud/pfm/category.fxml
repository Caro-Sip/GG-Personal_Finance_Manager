<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gitgud.pfm.Controllers.CategoryController">
    <children>
        <Label text="Category Management" />
        <ListView fx:id="categoryListView" prefHeight="200.0" prefWidth="300.0" />
        <Label text="Add Custom Category:" />
        <TextField fx:id="nameField" promptText="Category Name" />
        <TextField fx:id="descField" promptText="Description" />
        <ComboBox fx:id="typeCombo" promptText="Type" />
        <Button text="Add Category" onAction="#addCategory" />
        <Button text="Back" onAction="#goBack" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
