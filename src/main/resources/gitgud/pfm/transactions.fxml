<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gitgud.pfm.Controllers.TransactionController"
            style="-fx-background-color: #f0f2f5;">
    
    <padding>
        <Insets top="28" right="28" bottom="28" left="28"/>
    </padding>
    
    <!-- Header -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="24"/>
            </padding>
            
            <Label text="All Transactions" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Label fx:id="balanceLabel" 
                   text="Balance: $0.00"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #10b981;"/>
            
            <Button fx:id="addButton" 
                    text="+ Add Transaction"
                    onAction="#handleAddTransaction"
                    style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand;"/>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox spacing="16" alignment="TOP_CENTER">
            <TableView fx:id="transactionTable" 
                       VBox.vgrow="ALWAYS"
                       style="-fx-background-color: white; -fx-background-radius: 8;">
                
                <columns>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="nameColumn" text="Description" prefWidth="200"/>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150"/>
                    <TableColumn fx:id="accountColumn" text="Account" prefWidth="150"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="amountColumn" text="Amount" prefWidth="120"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
                </columns>
                
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    
</BorderPane>
